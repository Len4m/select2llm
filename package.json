{
  "type": "module",
  "name": "select2llm",
  "homepage": "https://github.com/Len4m/select2llm",
  "version": "1.0.0",
  "description": "Select text to LLM",
  "author": {
    "name": "Lenam",
    "email": "lenamgenx@protonmail.com",
    "url": "https://len4m.github.io/"
  },
  "main": "main.js",
  "scripts": {
    "dev": "NODE_ENV=development electronmon --trace-warnings .",
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f",
    "postinstall": "electron-rebuild -f || echo \"(no native modules)\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "clipboardy": "^4.0.0",
    "ollama": "^0.5.17"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3"
  },
  "build": {
    "asar": true,
    "appId": "com.lenam.Select2llm",
    "productName": "Select2LLM",
    "icon": "images/icon-transparent.png",
    "linux": {
      "category": "Utility",
      "icon": "images/icon-transparent.png",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "nsis"
    }
  }
}
